                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toEndOf="@+id/ynab_budget_label"
                        app:layout_constraintStart_toEndOf="@+id/ynab_budget_label"
                        app:layout_constraintTop_toTopOf="@+id/ynab_budget_label" />

                    <TextView
                        android:id="@+id/ynab_budget_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="79dp"
                        android:layout_marginBottom="78dp"
                        android:text="Latest Sync Date"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ynab_username_textbox" />

                    <TextView
                        android:id="@+id/ynab_username_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
